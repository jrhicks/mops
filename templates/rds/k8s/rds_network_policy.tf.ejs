---
to: k8s/infrastructure/configs/rds_network_policy.yaml
---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: rds-access-policy
  namespace: your-namespace
spec:
  podSelector:
    matchLabels:
      app: your-app-label # Label for pods that need RDS access
  policyTypes:
  - Egress
  egress:
  - to:
    - ipBlock:
        cidr: [RDS Instance IP]/32
    ports:
    - protocol: TCP
      port: 5432 # Assuming PostgreSQL, change the port based on your RDS type
