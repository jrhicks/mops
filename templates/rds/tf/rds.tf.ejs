---
to: terraform/rds.tf
---
resource "aws_db_instance" "rails_db" {
    allocated_storage    = 20
    storage_type         = "gp2"
    engine               = "postgres"  # Assuming PostgreSQL is used
    engine_version       = "12.4"      # Specify the PostgreSQL version
    instance_class       = "db.t3.micro"
    name                 = "myrailsdb"
    username             = "dbadmin"   # Your database admin username
    parameter_group_name = "default.postgres12"
    skip_final_snapshot  = true
    # Note: Password is not specified here
  }