---
to: terraform/app-<%=app_name%>-ecr.tf
---
# ECR Repository
resource "aws_ecr_repository" "<%=app_name%>" {
  name                 = "<%=environment%>-<%=app_name%>-container-registy"
container-registry"
  image_tag_mutability = "IMMUTABLE"
}

# IAM Policy for ECR - Allows pushing images to the repository
resource "aws_iam_policy" "ecr_write" {
  name        = "ecr-write-policy"
  description = "A policy that allows writing to a specific ECR repository."

  policy = jsonencode({
    Version = "2012-10-17",
    Statement = [
      {
        Effect   = "Allow",
        Action   = [
          "ecr:GetDownloadUrlForLayer",
          "ecr:BatchGetImage",
          "ecr:BatchCheckLayerAvailability",
          "ecr:PutImage",
          "ecr:InitiateLayerUpload",
          "ecr:UploadLayerPart",
          "ecr:CompleteLayerUpload"
        ],
        Resource = aws_ecr_repository.<%=app_name%>.arn
      }
    ]
  })
  depends_on              = [module.vpc]

}

# IAM User
resource "aws_iam_user" "ecr_user" {
  name = "<%=environment%>-<%=app_name%>-ecr-user"
}

# Attach role to user
resource "aws_iam_user_policy_attachment" "ecr_user_attach" {
  user       = aws_iam_user.ecr_user.name
  policy_arn = aws_iam_policy.ecr_write.arn
}

output "ecr_repository_url" {
  value = aws_ecr_repository.<%=app_name%>.repository_url
}
